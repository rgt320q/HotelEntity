@using HotelEntity.Entites;
@model List<BookingInformation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Booking No
        </th>
        <th>
            Arrivaldate
        </th>
        <th>
            DepartureDate
        </th>
        <th>
            Guest Name
        </th>
        <th>
            Guest Surname
        </th>
        <th>
            Guest Phone
        </th>
        <th>
            Guest Email
        </th>
        <th>
            RoomNo
        </th>
        <th>
            Status
        </th>
        <th>
            SumDays
        </th>
        <th>
            Daily Person Price
        </th>
        <th>
            Extrasprice
        </th>
        <th>
            DiscountPrice
        </th>
        <th>
            TotalPrice
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.BookingId
            </td>
            <td>
                @item.Arrivaldate.ToShortDateString()
            </td>
            <td>
                @item.DepartureDate.ToShortDateString()
            </td>

            @foreach (var guest in item.GuestInformation)
            {
                <td>
                    @guest.GuestName
                </td>
                <td>
                    @guest.GuestSurName
                </td>
                <td>
                    @guest.GuestPhone
                </td>
                <td>
                    @guest.GuestEmail
                </td>
            }

            <td>
                @item.RoomNo
            </td>
            <td>
                @item.Status
            </td>
            <td>
                @item.SumDays
            </td>

            @foreach (var payment in item.Payments)
            {
                <td>
                    @payment.DailyPersonPrice.Value.ToString("C")
                </td>
                <td>
                    @payment.Extrasprice.Value.ToString("C")
                </td>
                <td>
                    @payment.DiscountPrice.Value.ToString("C")
                </td>
                <td>
                    @payment.TotalPrice.ToString("C")
                </td>
            }
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BookingId })
                @Html.ActionLink("Delete", "Delete", new { id = item.BookingId })
            </td>
        </tr>
    }

</table>
